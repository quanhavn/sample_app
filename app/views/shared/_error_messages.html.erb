<% if @user && @user.errors.any? %>
    <div class="error_explantion"> 
        <div class = "alert alert-danger">
            The form contains <%= pluralize(@user.errors.count, "error") %> 
        </div>
        <ul>
            <% @user.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
        </ul>
    </div>
<% end %>